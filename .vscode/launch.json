    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug CodeWeaver CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "src/codeweaver/cli/__init__.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Gramfetch Script",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/gramfetch.py",
            "console": "integratedTerminal",
            "args": [
                "fetch",
                "-l",
                "python"
            ]
        }
    ]
}
